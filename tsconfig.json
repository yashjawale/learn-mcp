{
	"compilerOptions": {
		"target": "es2022",
		"module": "node16",
		"moduleResolution": "node16",
		"outDir": "build",
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}